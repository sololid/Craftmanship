@model IEnumerable<Products>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:2px">
                    <div class="card ">
                        <img src="@product.ImageUrl" class="card-img-top rounded"/>
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-bg-secondary"><u>@product.Name</u></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-bg-secondary"><b>@product.Price.ToString("0.00")kr.</b></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" class="btn btn-outline-primary form-control" asp-route-productId="@product.Id">Information</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
