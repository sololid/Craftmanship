@model Craftmanship.Core.Models.ViewModel.ShoppingCartsVM
@using Microsoft.Extensions.Options
@inject IOptions<Craftmanship.Core.Utility.StripeSettings> Stripe

<form method="post">
	<br />
	<div class="container">
		<div class="card">
			@*<div class="card-header bg-dark text-light ml-0">
			<div class=" row container">
			<div class="col-6">
			<i class="fa fa-shopping-cart"></i> &nbsp;
			Information om beställning
			</div>
			</div>
			</div>*@
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-primary"><u>Leveransinformation</u></span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Namn</label>
								</div>
								<div class="col-9">
									<input asp-for="Orders.Name" class="form-control" />
									<span asp-validation-for="Orders.Name" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Telefon</label>
								</div>
								<div class="col-9">
									<input asp-for="Orders.PhoneNumber" class="form-control" />
									<span asp-validation-for="Orders.PhoneNumber" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Adress</label>
								</div>
								<div class="col-9">
									<input asp-for="Orders.Address" class="form-control" />
									<span asp-validation-for="Orders.Address" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Stad</label>
								</div>
								<div class="col-9">
									<input asp-for="Orders.City" class="form-control" />
									<span asp-validation-for="Orders.City" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Postnummer</label>
								</div>
								<div class="col-9">
									<input asp-for="Orders.ZipCode" class="form-control" />
									<span asp-validation-for="Orders.ZipCode" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-primary"><u>Beställning</u></span>
							</h4>
							<ul class="list-group mb-3">
								@foreach (var details in Model.ShoppingCartList)
								{
									<li class="list-group-item d-flex justify-content-between">
										<div>
											<h6 class="my-0">@details.Product.Name</h6>
											<small class="text-primary">Antal: @details.Count</small>
										</div>
										<span class="text-primary">@((details.Product.Price * details.Count).ToString("c")) </span>
									</li>
								}
								<li class="list-group-item d-flex justify-content-between bg-light">
									<small class="text-primary">Totalt:</small>
									<strong class="text-primary">@Model.Orders.OrderTotal.ToString("c")</strong>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12 col-md-8 pt-2">
						<p style="color:grey; font-size:14px;">
							Beräknat leveransdatum
							@DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
						</p>
					</div>
					<div class="col-12 col-md-2">
						<a asp-action="Index" class="btn btn-outline-primary form-control">Tillbaka</a>
					</div>
					<div class="col-12 col-md-2">
						<button type="submit" value="Place Order" class="btn btn-success form-control">Beställ</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>