@model Craftmanship.Core.Models.Categories

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Radera kontrollpunkt</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Radera</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Tillbaka till lista</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
     