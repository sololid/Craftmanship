@model IEnumerable<Craftmanship.Core.Models.Categories>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Alla kategorier</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Lägg till kategori
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-borderd table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Namn
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td width="60%">
                        @category.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Update" asp-route-id="@category.Id"
                           class="btn btn-black mx-2"> <i class="bi bi-pencil-square"></i> &nbsp; Uppdatera</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-x-circle"></i> &nbsp; Radera</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

