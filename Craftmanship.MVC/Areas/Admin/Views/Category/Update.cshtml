@model Craftmanship.Core.Models.Categories

<form method="post" asp-action="Update">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Uppdatera kontrollpunkt</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Uppdatera</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Tillbaka till lista</a>
    </div>
</form>
