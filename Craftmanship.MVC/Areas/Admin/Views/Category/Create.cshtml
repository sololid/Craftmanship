@model Craftmanship.Core.Models.Categories

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //ViewData["Title"] = "Skapa en ny kontrollpunkt";
}

<form asp-action="Create">
    <div class="row">
        <div class="col-md-8 offset-2">
            <p>
                <h3>Skapa en ny kategori</h3>
            </p>
            <div class="row">
                <div class="col-md-8 offset-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-bg-danger"></span>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary" style="width:150px">Skapa</button>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Tillbaka till lista </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}